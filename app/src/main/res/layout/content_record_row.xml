<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="10dp"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/record_row_cat"
        android:text="Категория: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/record_row_desc"
        android:text="Описание: "
        android:layout_below="@id/record_row_cat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" />


    <!--категория-->
    <TextView
        android:id="@+id/record_row_begin"
        android:layout_below="@+id/start_time_value"
        android:text="Время начала: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/record_row_end"
        android:text="Время конца: "
        android:layout_below="@+id/category_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/record_row_interval"
        android:text="Интервал: "
        android:layout_below="@+id/category_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_below="@+id/start_time_interval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Фото:" />


    <LinearLayout
        android:id="@+id/photos_layout"
        android:orientation="horizontal"
        android:layout_below="@+id/segment_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></LinearLayout>

</LinearLayout>